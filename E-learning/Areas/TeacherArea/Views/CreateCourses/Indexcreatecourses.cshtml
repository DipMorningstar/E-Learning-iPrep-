    <script type="text/javascript">


        function encodeImgtoBase64(element) {
            var img = element.files[0];
            var reader = new FileReader();

            reader.onloadend = function () {
                $("#convertImg").attr("value", reader.result);

            }

            reader.readAsDataURL(img);

        }

    </script>
