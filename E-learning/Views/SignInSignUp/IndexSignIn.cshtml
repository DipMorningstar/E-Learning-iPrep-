<body>

    <div class="sign_in_up_bg">
        <div class="container">
            <div class="row justify-content-lg-center justify-content-md-center">
                <div class="col-lg-12">
                    <div class="main_logo25" id="logo">
                        <a href="../Home/Index"><img src="../../images/logosize-removebg-preview.png" alt=""></a>
                        <a href="../Home/Index"><img class="logo-inverse" src="../../images/logosize-removebg-preview.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-8">
                    <div class="sign_form">

                        <form asp-controller="SignInSignUp" asp-action="Login">
                            <div style="color:red;">
                                @ViewBag.message
                            </div>
                            <div class="ui search focus mt-15">
                                <div class="ui left icon input swdh95">
                                    <input class="prompt srch_explore form-control" type="email" name="User_email" value="" id="id_email" required="" maxlength="64" placeholder="Email Address">
                                    <i clindex.htmlass="uil uil-envelope icon icon2"></i>
                                </div>
                            </div>
                            <div class="ui search focus mt-15">
                                <div class="ui left icon input swdh95">
                                    <input class="prompt srch_explore form-control" type="password" name="Password" value="" id="id_password" required="" maxlength="64" placeholder="Password">
                                    <i class="uil uil-key-skeleton-alt icon icon2"></i>
                                </div>
                            </div>

                            <button class="login-btn" type="submit">Sign In</button>


                        </form>
                        <p class="sgntrm145">Or <a href="../ForgetPassword/IndexForgetPasssword">Forgot Password</a></p>
                        <p class="mb-0 mt-30 hvsng145">Don't have an account? <a href="../SignInSignUp/IndexSignUp">Sign Up</a></p>

                    </div>
                    <div class="sign_footer"><img src="../../images/minilogosize-removebg-preview (1).png" alt="">© 2022 <strong>Prep</strong>. All Rights Reserved.</div>
                </div>
            </div>
        </div>
    </div>

    <script src="../../js/jquery-3.3.1.min.js"></script>
    <script src="../../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../../vendor/OwlCarousel/owl.carousel.js"></script>
    @*<script src="../../vendor/semantic/semantic.min.js"></script>*@
    <script src="../../js/custom.js"></script>
    <script src="../../js/night-mode.js"></script>
</body>


</html>