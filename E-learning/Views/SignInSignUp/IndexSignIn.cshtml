<body>

    <div class="sign_in_up_bg">
        <div class="container">
            <div class="row justify-content-lg-center justify-content-md-center">
                <div class="col-lg-12">
                    <div class="main_logo25" id="logo">
                        <a href="../Home/Index"><img src="../../images/logo_iprep.png" alt=""></a>
                        <a href="../Home/Index"><img class="logo-inverse" src="../../images/logo_iprep.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-8">
                    <div class="sign_form">

                        <form id="signin" asp-controller="SignInSignUp" asp-action="Login">
                            <div style="color:red;">
                                @ViewBag.message
                            </div>



                            <div class="form-floating ui search focus mb-3 mt-3">
                                <input type="email" class="form-control  " id="id_email" placeholder="Enter email" name="User_email" maxlength="64" required> 
                                <label for="id_email">Email</label>
                                @*<h5 id="validate_Email" style="color:red">*Enter  Valid Email !</h5>*@
                            </div>
                            <div class="form-floating ui search focus mb-3 mt-3">
                                <input type="password" class="form-control " id="id_password" placeholder="Enter password" name="Password" minlength="8" maxlength="12" required>
                                <label for="id_password">Password</label>
                                @*<h5 id="validate_Password" style="color:red">*Enter Valid Password !</h5>*@


                            </div>


                            <button class="login-btn" type="submit" onsubmit="checkvalidation()">Sign In</button>
                            

                        </form>
                        @*<p class="sgntrm145">Or <a href="../ForgetPassword/IndexForgetPasssword">Forgot Password</a></p>*@
                        <p class="mb-0 mt-30 hvsng145">Don't have an account? <a href="../SignInSignUp/IndexSignUp">Sign Up</a></p>

                    </div>
                    <div class="sign_footer"><img src="../../images/minilogosize-removebg-preview (1).png" alt="">© 2022 <strong>iPREP</strong>. All Rights Reserved.</div>
                </div>
            </div>
        </div>
    </div>

